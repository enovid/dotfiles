# https://pwmt.org/projects/zathura/documentation/

set selection-clipboard clipboard

# TEXT COLOR:
set recolor-darkcolor "#D8DEE9"  # FG COLOR
set recolor-lightcolor "#1A1C1D" # BG COLOR

# HIGHLIGHT COLOR:
set highlight-color "#FFFF00"
set highlight-active-color "#F0F"
set highlight-transparency 0.2

set recolor "true"
set recolor-keephue "true"
set render-loading "false"
set incremental-search true
set notification-fg "#abb2bf"
set notification-bg "#000"
set guioptions 0 # hide the status bar

# Mappings
map <C-e> scroll half-up
map <C-d> toggle_page_mode
map e scroll half-up
map u scroll half-up
map d scroll half-down
